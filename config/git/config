[include]
    path = ~/.gitconfig.local

[core]
  quotepath = false
  editor = mvim -f
  #editor = vimr --wait --nvim

[alias]
  co = checkout
  cof = !git branch | fzf | xargs -n 1 git checkout
  br = branch -v
  ci = commit
  st = status -bs
  last = log -1 HEAD
  ds = diff --stat
  ca = diff --cached
  cs = diff --cached --stat
  vimdiff = difftool -t macvimdiff
  df = !git --no-pager diff --word-diff
  re = remote -v
  mt = mergetool
  glog = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
  changelog = log --graph --topo-order --stat
  fp = log --first-parent

  # あるコミットがマージされた箇所を調べる (https://stackoverflow.com/questions/8475448/find-merge-commit-which-include-a-specific-commit)
  find-merge = "!sh -c 'commit=$0 && branch=${1:-HEAD} && (git rev-list $commit..$branch --ancestry-path | cat -n; git rev-list $commit..$branch --first-parent | cat -n) | sort -k2 -s | uniq -f1 -d | sort -n | tail -1 | cut -f2'"
  show-merge = "!sh -c 'merge=$(git find-merge $0 $1) && [ -n \"$merge\" ] && git show $merge'"

#[pager]
#  log = diff-highlight | less
#  show = diff-highlight | less
#  diff = diff-highlight | less

[color]
  ui = auto

[gui]
	commitmsgwidth = 85

[commit]
  template = ~/.stCommitMsg

[grep]
  lineNumber = true

[rerere]
  enabled = true


[diff]
  algorithm = patience
  tool = macvimdiff

[difftool]
  prompt = false

[difftool "macvimdiff"]
  cmd = "mvimdiff \"$LOCAL\" \"$REMOTE\""

[difftool "vimrdiff"]
    cmd = vimr --wait --nvim -d "$LOCAL" "$REMOTE"

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =


[merge]
  tool = mvimdiff
  #tool = vimrdiff
  conflictstyle = diff3

[mergetool]
  prompt = false
  keepBackup = false

[mergetool "mvimdiff"]
  cmd = mvimdiff -f "$LOCAL" "$MERGED" "$REMOTE"

[mergetool "vimrdiff"]
  # https://www.grzegorowski.com/using-vim-or-neovim-nvim-as-a-git-mergetool
  #cmd = vimr --wait --nvim -c \"Gvdiffsplit! \" \"$MERGED\"
  cmd = vimr --wait --nvim -d "$LOCAL" "$MERGED" "$REMOTE"

[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true


[push]
	default = simple

[pull]
  ff = only

[fetch]
	recurseSubmodules = false
	prune = true

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[user]
	useConfigOnly = true

