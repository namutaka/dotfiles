[core]
  excludesfile = ~/dotfiles/git-excludes
  quotepath = false

[alias]
  co = checkout
  br = branch -v
  ci = commit
  st = status
  last = log -1 HEAD
  ds = diff --stat
  ca = diff --cached
  cs = diff --cached --stat
  vd = difftool -t macvimdiff
  df = !git --no-pager diff
	re = remote -v

[difftool]
  prompt = false

[difftool "macvimdiff"]
  cmd = "git_diff_macvim \"$LOCAL\" \"$REMOTE\""

[pager]

[color]
  ui = auto

[merge]
	tool = mvimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
[mergetool "mvimdiff"]
  cmd = /usr/local/bin/mvimdiff -f "$LOCAL" "$MERGED" "$REMOTE"

